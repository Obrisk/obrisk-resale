map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}


server {
    listen 80;
    return 444; #This is a default server and it blocks all disallowed hosts
}


server {
    server_name 0br.live www.0br.live; 

    keepalive_timeout 5;
    client_max_body_size 4G;

    access_log /home/obdev-user/logs/nginx-access.log;
    error_log /home/obdev-user/logs/nginx-error.log;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        autoindex on;
        alias /home/obdev-user/obdev2018/staticfiles/;
        expires 1M;
        access_log off;
        add_header Cache-Control "public";
        proxy_ignore_headers "Set-Cookie";
    }

    location @proxy_to_app {
        proxy_read_timeout 180;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_redirect off;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://localhost:8000;
}


    # checks for static file, if not found proxy to app
    location / {
        try_files $uri @proxy_to_app;
    }

}



